<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Godisautomat.Styles">

    <Color x:Key="Main">#03A9F4</Color>
    <SolidColorBrush x:Key="MainBrush" Color="{StaticResource Main}" />

    <Color x:Key="Accent">#3F51B5</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>

    <Color x:Key="AccentDark">#031579</Color>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDark}"/>

    <Color x:Key="Positive">#00E676</Color>
    <SolidColorBrush x:Key="PositiveBrush" Color="{StaticResource Positive}"/>

    <Color x:Key="PositiveAccent">#4CAF50</Color>
    <SolidColorBrush x:Key="PositiveAccentBrush" Color="{StaticResource PositiveAccent}"/>

    <Color x:Key="Negative">#FF8A80</Color>
    <SolidColorBrush x:Key="NegativeBrush" Color="{StaticResource Negative}"/>

    <Color x:Key="NegativeAccent">#F44336</Color>
    <SolidColorBrush x:Key="NegativeAccentBrush" Color="{StaticResource NegativeAccent}"/>

    <Color x:Key="Background">#FAFAFA</Color>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>

    <Color x:Key="Text">#4b4b4b</Color>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource Text}"/>

</ResourceDictionary>